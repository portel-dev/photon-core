{
  "name": "@portel/photon-core",
  "version": "2.7.0",
  "description": "Core library for parsing, loading, and managing .photon.ts files - runtime-agnostic foundation for building custom Photon runtimes",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./design-system/tokens": {
      "types": "./dist/design-system/tokens.d.ts",
      "import": "./dist/design-system/tokens.js",
      "default": "./dist/design-system/tokens.js"
    },
    "./mcp-apps": {
      "types": "./dist/mcp-apps.d.ts",
      "import": "./dist/mcp-apps.js",
      "default": "./dist/mcp-apps.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run build && npx tsx tests/channels.test.ts && npx tsx tests/shared-utils.test.ts && npx tsx tests/collections.test.ts && npx tsx tests/audit.test.ts && npx tsx tests/memory.test.ts",
    "test:channels": "npx tsx tests/channels.test.ts"
  },
  "keywords": [
    "photon",
    "mcp",
    "model-context-protocol",
    "typescript",
    "schema",
    "parser",
    "dependency-manager",
    "rest-api",
    "graphql",
    "rpc",
    "runtime-agnostic"
  ],
  "author": "Portel <support@portel.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portel-dev/photon-core.git"
  },
  "bugs": {
    "url": "https://github.com/portel-dev/photon-core/issues"
  },
  "homepage": "https://github.com/portel-dev/photon-core#readme",
  "dependencies": {
    "@portel/cli": "^1.0.1",
    "@portel/mcp": "^1.0.1",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
